<institutions-response
    xmlns="https://github.com/erasmus-without-paper/ewp-specs-api-institutions/tree/master"
    xmlns:a="https://github.com/erasmus-without-paper/ewp-specs-types-address/tree/master"
    xmlns:p="https://github.com/erasmus-without-paper/ewp-specs-types-phonenumber/tree/master"
    xmlns:trm="https://github.com/erasmus-without-paper/ewp-specs-types-academic-term/tree/master"
    xmlns:xml="http://www.w3.org/XML/1998/namespace"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        https://github.com/erasmus-without-paper/ewp-specs-api-institutions/tree/master
        response.xsd
    "
>
    <!-- WRTODO: Make schemaLocation absolute -->

    <!--
    IMPORTANT: Please see the response.xsd file for detailed requirements and
    descriptions of all the elements. You MUST NOT base your implementation
    solely on the example file.
    -->
    <hei>
        <!-- Identifiers (same as in the Manifest). -->
        <hei-id>uio.no</hei-id>
        <other-id type="erasmus">N Oslo01</other-id>
        <other-id type="euc-no">12345</other-id>
        <other-id type="local">UIO</other-id>

        <!-- Primary attributes (name, website, logo, etc.) -->
        <name xml:lang="en">University of Oslo</name>
        <name xml:lang="no">Universitetet i Oslo</name>
        <logo-url>https://titan.uio.no/sites/all/themes/titan/img/uiologo.svg</logo-url>
        <!--
        Kai's comment:
        Conceptually, these come from HEI Information in the model -
        maybe they could be expressed in the same way?
        -->
        <website-url xml:lang="no">http://www.uio.no/</website-url>
        <website-url xml:lang="en">http://www.uio.no/english/</website-url>
        <a:street-address>
            <a:addressLine>University of Oslo</a:addressLine>
            <a:locality>Oslo</a:locality>
            <a:country>NO</a:country>
        </a:street-address>
        <a:mailing-address>
            <a:postOfficeBox>1072</a:postOfficeBox>
            <a:postalCode>0316</a:postalCode>
            <a:locality>Oslo</a:locality>
            <a:country>NO</a:country>
        </a:mailing-address>

        <!-- Mobility factsheet. -->
        <!--
        Kai's comment:
        Conceptually, these come from HEI Information in the model -
        maybe they could be expressed in the same way? (Suggestion below)
        -->
        <!--
        <mobility-factsheet-url xml:lang="en">http://www.uio.no/english/studies/new-student/</mobility-factsheet-url>
        <mobility-factsheet-url xml:lang="en">http://example.com/factsheet.pdf</mobility-factsheet-url>
        -->
        <embedded-mobility-factsheet xml:lang="en">
            <nestable-text-section>
                <header>New students</header>
                <!-- Content, URL/email/phone/address and/or subsections must be defined. -->
                <url xml:lang="en">http://www.uio.no/english/studies/new-student/</url>
            </nestable-text-section>
            <nestable-text-section>
                <header>Fact sheet (PDF)</header>
                <!-- Content, URL/email/phone/address and/or subsections must be defined. -->
                <url xml:lang="en">http://example.com/factsheet.pdf</url>
            </nestable-text-section>
        </embedded-mobility-factsheet>
        <!-- Kai's comment: From HEI Information in the model. -->
        <embedded-mobility-factsheet xml:lang="en">
            <nestable-text-section>
                <header>Housing</header>
                <!-- Content, URL/email/phone/address and/or subsections must be defined. -->
                <content>Multiline plaintext.</content>
            </nestable-text-section>
            <nestable-text-section>
                <header>Living expenses</header>
                <!-- Content, URL/email/phone/address and/or subsections must be defined. -->
                <content>Multiline plaintext.</content>
            </nestable-text-section>
            <!-- Kai's comment: Nested examples from SF JYVASKY01. -->
            <nestable-text-section>
                <header>Residence permit</header>
                <nestable-text-section>
                    <section-title>EU/EEA citizens</section-title>
                    <!-- Content, URL/email/phone/address and/or subsections must be defined. -->
                    <content>Multiline plaintext.</content>
                </nestable-text-section>
                <nestable-text-section>
                    <header>Non-EU/EEA citizens</header>
                    <!-- Content, URL/email/phone/address and/or subsections must be defined. -->
                    <content>Multiline plaintext.</content>
                </nestable-text-section>
            </nestable-text-section>
            <nestable-text-section>
                <header>Health insurance</header>
                <nestable-text-section>
                    <header>EU/EEA citizens</header>
                    <!-- Content, URL/email/phone/address and/or subsections must be defined. -->
                    <content>Multiline plaintext.</content>
                </nestable-text-section>
                <nestable-text-section>
                    <header>Non-EU/EEA citizens</header>
                    <!-- Content, URL/email/phone/address and/or subsections must be defined. -->
                    <content>Multiline plaintext.</content>
                </nestable-text-section>
            </nestable-text-section>
        </embedded-mobility-factsheet>

        <!-- Contacts section. -->
        <!-- Kai's comment:
        Non-personal contact info is also from HEI Information in the model,
        and can be represented in the same way.
        -->
        <embedded-mobility-factsheet xml:lang="en">
            <nestable-text-section>
                <header>IRO Office</header>
                <!-- Content, URL/email/phone/address and/or subsections must be defined. -->
                <email>iro@uio.no</email>
                <p:phone-number>
                    <p:e164>+4722222222</p:e164>
                    <p:ext>3407</p:ext>
                </p:phone-number>
                <p:fax-number>
                    <p:other-format>(23) 456789</p:other-format> <!-- discouraged -->
                </p:fax-number>
            </nestable-text-section>
        </embedded-mobility-factsheet>
        <!-- Coordinators section. -->
        <coordinator>
            <!-- Kai's comment: From Person in the model. -->
            <first-names>John</first-names>
            <last-name>Doe</last-name>
            <p:phone-number>
                <p:e164>+4723456789</p:e164>
            </p:phone-number>
            <email>john@uio.no</email>
            <a:street-address> <!-- As described before. --> </a:street-address>
            <a:mailing-address> <!-- As described before. --> </a:mailing-address>
            <!-- Kai's comment: From Coordinator in the model. -->
            <role>
                <header>Visas</header>
                <description xml:lang="en">Advising incoming students in regard to visas.</description>
                <other-info>
                    Other information, which is not present in the model itself, e.g. calling hours.
                </other-info>
            </role>
            <role>
                <header>Insurance</header>
                <description xml:lang="en">Advising incoming students in regard to insurance.</description>
                <other-info>
                    Other information, which is not present in the model itself, e.g. calling hours.
                </other-info>
            </role>
        </coordinator>

        <!-- List of department IDs. -->
        <unit-id>fsat.no</unit-id>
        <unit-id>matnat.uio.no</unit-id>
        <unit-id>hf.uio.no</unit-id>
    </hei>
</institutions-response>
